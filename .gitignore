craft/storage/runtime/*
craft/storage/backups/*
site/assets/
site/documents/
site/assets/uploads/*
site/assets/blog/_*
site/assets/misc/_*
site/assets/people/_*
site/assets/work/_*
site/assets/welcome/_*

